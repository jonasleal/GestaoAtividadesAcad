<%= form_for([@projeto,atividade], local: true) do |form| %>
  <div class="row">
  <div class="col-sm">
    <div class="row">
      <div class="col-sm">
        <%= form.text_field :titulo, id: :atividade_titulo,:class => "form-control", placeholder: "Título" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <table>
        <tr>
          <td style="text-align: center" colspan="2">Data</td>
        </tr>
        <tr>
          <td>
            <%= form.label :dataInicio, value='Início' %>
          </td>
          <td>
            <%= form.date_select :dataInicio, id: :atividade_dataInicio %>
          </td>
        </tr>
        <tr>
          <td>
            <%= form.label :dataFim, value='Fim' %>
          </td>
          <td>
            <%= form.date_select :dataFim, id: :atividade_dataFim %>
          </td>
        </tr>
      </table>
    </div>
    <br/>
    <div class="row">
      <div class="col-sm" >
        <%= form.number_field :cargaPrev, id: :atividade_cargaPrev,:class => "form-control", placeholder: "Carga horaria prevista"  %>
      </div>
    </div>

    <br/>
  </div>
    <div class="col-sm">
      <%= form.text_area :descricao, id: :atividade_descricao,:class => "form-control descricao", placeholder: "Descrição" %>

    </div>
  </div>
  <div class="row">
    <div class="col-sm div-centro">
      <%= link_to 'Voltar', projeto_path(@projeto) , :class => "btn btn-primary" %>
    </div>
    <div class="col-sm div-centro">
      <%= form.submit value="Adicionar", id: :adcAtividade, :class => "btn btn-primary" %>
    </div>
  </div>

<% end %>


<% if @projeto.errors.any? %>
  <div class="alert alert-warning alert-dismissible fade show alertaCadastro" role="alert">

    <div>
      <h4>
        <%= pluralize(projeto.errors.count, "error") %> prohibited this projeto from being saved:
      </h4>
      <ul>
        <% @projeto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
